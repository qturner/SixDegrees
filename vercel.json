{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/test",
            "destination": "/api/test.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/dist/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/reset",
            "schedule": "0 5 * * *"
        }
    ]
}